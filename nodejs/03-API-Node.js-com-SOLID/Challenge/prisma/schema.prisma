generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  ORG
  USER
}

model DonationPet {
  id            String    @id @default(uuid())
  name          String
  species       String
  idade         Int
  description   String?
  state         String
  city          String
  adotado       Boolean   @default(false)
  created_at    DateTime  @default(now())
  date_donation DateTime?

  organization    Organization @relation(fields: [organization_id], references: [id])
  organization_id String

  @@map("donation_pets")
}

model Organization {
  id            String   @id @default(uuid())
  title         String
  description   String?
  phone         String
  email         String?
  state         String
  city          String
  latitude      Decimal?
  longitude     Decimal?
  user_name     String
  password_hash String
  created_at    DateTime @default(now())
  role          Role     @default(ORG)

  DonationPets DonationPet[]

  @@map("organizations")
}
